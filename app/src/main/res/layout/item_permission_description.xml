<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:padding="12dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/itemPermissionDescriptionIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher_round"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    <TextView
            android:id="@+id/itemPermissionDescriptionTitle"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemPermissionDescriptionIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="0dp"
            tools:text="存储空间权限"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/itemPermissionDescriptionContent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/itemPermissionDescriptionTitle"
            app:layout_constraintStart_toEndOf="@id/itemPermissionDescriptionIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:textColor="#87898b"
            tools:text="查看、操作设备文件"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>