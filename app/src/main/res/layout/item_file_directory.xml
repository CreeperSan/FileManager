<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="8dp"
        android:padding="12dp"
        android:background="@drawable/bg_file_directory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/itemFileDirectoryIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_directory_dark_blue" />

    <TextView
            android:id="@+id/itemFileDirectoryTitle"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dribbble" />

    <TextView
            android:id="@+id/itemFileDirectoryInfo"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#b4bac6"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.02.2019" />

</LinearLayout>