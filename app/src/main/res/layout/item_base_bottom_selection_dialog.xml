<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="6dp"
    android:paddingEnd="16dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/itemBaseBottomSelectionDialogIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/itemBaseBottomSelectionDialogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="1"
        android:textSize="14sp"
        tools:text="选项1" />

    <TextView
        android:textColor="#888888"
        android:id="@+id/itemBaseBottomSelectionDialogHintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="4dp"
        android:textSize="12sp"
        tools:text="26" />

    <ImageView
        android:id="@+id/itemBaseBottomSelectionDialogHintIcon"
        android:layout_width="18dp"
        android:layout_height="24dp"
        tools:src="@drawable/ic_arrow_back_dark_blue" />

</LinearLayout>