<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <scale
            android:pivotX="50%"
            android:pivotY="50%"
            android:duration="200"
            android:fromXScale="100%"
            android:fromYScale="100%"
            android:toXScale="95%"
            android:toYScale="95%"/>

    <alpha
            android:duration="200"
            android:fromAlpha="1"
            android:toAlpha="0"/>

    <translate
            android:duration="200"
            android:fromYDelta="0%"
            android:toYDelta="30%" />


</set>